<%= form_for [:admin, @item], :html => {class: 'form-horizontal user', multipart: true} do |f| %>
    <div class="box-body resize">
      <% if @item.errors.any? %>
          <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@item.errors.count, 'error') %> prohibited this user from being
                saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
                <% @item.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.text_field :name, :class => 'form-control', :id => 'item_name', :placeholder => 'Enter Item Name' %></div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.text_area :description, :class => 'form-control', :id => 'item_des', :placeholder => 'About this item', rows: 3 %></div>
      </div>

      <div class="form-group">
        <%= f.label :quantity, class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.text_field :quantity, :class => 'form-control', :id => 'item_quantity', :placeholder => 'Enter Quantity' %></div>
      </div>

      <div class="form-group">
        <%= f.label :image, class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.file_field :image, :id => 'item_img', :placeholder => 'Enter Locality' %></div>
      </div>

    </div>


    <div class="box-footer">
      <%= f.submit nil, :class => 'btn btn-sm btn-success' %>
      <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                  admin_items_path, :class => 'btn btn-sm btn-default' %>
    </div>

<% end %>
